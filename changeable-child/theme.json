{
  "version": 2,
  "settings": {
    "typography": {
      "fontFamilies": [
        { "fontFamily": "system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif", "name": "System Sans", "slug": "system-sans" }
      ],
      "fluid": true,
      "dropCap": false
    },
    "color": {
      "palette": [
        { "slug": "bg", "name": "Background", "color": "#ffffff" },
        { "slug": "ink", "name": "Ink", "color": "#111111" },
        { "slug": "brand", "name": "Brand", "color": "#FFBFA8" },
        { "slug": "accent", "name": "Accent", "color": "#1F4BFF" }
      ]
    },
    "spacing": { "units": ["px","rem","%","vw","vh"], "spacingScale": { "steps": 8 } },
    "layout": { "contentSize": "760px", "wideSize": "1180px" }
  },
  "styles": {
    "color": { "text": "var(--wp--preset--color--ink)", "background": "var(--wp--preset--color--bg)" },
    "typography": { "fontFamily": "var(--wp--preset--font-family--system-sans)", "lineHeight": "1.5" },
    "elements": { "heading": { "typography": { "lineHeight": "1.2" } } }
  },
  "templates": {
    "front-page": "Front page"
  }
}
