{
  "version": 2,
  "settings": {
    "appearanceTools": true,

    "layout": {
      "contentSize": "1140px",
      "wideSize": "1400px"
    },

    "blocks": {
      "core/group": {
        "layout": {
          "contentSize": "1140px",
          "wideSize": "1400px"
        }
      }
    },

    "custom": {
      "radius": {
        "sm": "8px",
        "md": "16px",
        "lg": "24px"
      }
    },
    "color": {
      "palette": [
        { "slug": "ink",      "name": "Ink",      "color": "#0C0C0D" },
        { "slug": "charcoal", "name": "Charcoal", "color": "#222326" },
        { "slug": "cloud",    "name": "Cloud",    "color": "#F6F7F9" },
        { "slug": "accent",   "name": "Accent",   "color": "#3B82F6" },
        { "slug": "accent-2", "name": "Accent 2", "color": "#F97316" }
      ],
      "duotone": []
    },
    "spacing": {
      "spacingScale": { "steps": 8 },
      "units": ["px", "em", "rem", "vw", "vh"]
    },
    "typography": {
      "fontFamilies": [
        {
          "name": "Space Grotesk",
          "slug": "space-grotesk",
          "fontFamily": "Space Grotesk, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
          "fontFace": [
            {
              "fontFamily": "Space Grotesk",
              "fontStyle": "normal",
              "fontWeight": "400",
              "src": ["file:./assets/fonts/space-grotesk-regular.ttf"]
            },
            {
              "fontFamily": "Space Grotesk",
              "fontStyle": "normal",
              "fontWeight": "500",
              "src": ["file:./assets/fonts/space-grotesk-medium.ttf"]
            },
            {
              "fontFamily": "Space Grotesk",
              "fontStyle": "normal",
              "fontWeight": "700",
              "src": ["file:./assets/fonts/space-grotesk-bold.ttf"]
            }
          ]
        }
      ],
      "lineHeight": { "units": ["px", "em", "rem"] }
    }
  },
  "styles": {
    "color": { "text": "var(--wp--preset--color--ink)" },

    "layout": {
      "contentSize": "1140px",
      "wideSize": "1400px"
    },

    "typography": {
      "fontFamily": "var(--wp--preset--font-family--space-grotesk)"
    },
    "elements": {
      "button": {
        "border": { "radius": "var(--wp--custom--radius--lg)" },
        "spacing": {
          "padding": { "top": "0.8rem", "right": "1.2rem", "bottom": "0.8rem", "left": "1.2rem" }
        },
        "typography": { "fontWeight": "700" },
        "color": {
          "text": "#ffffff",
          "background": "#000000"
        }
      }
    },
    "blocks": {
      "core/group": {
        "spacing": { "blockGap": "1.2rem" }
      }
    }
  },
  "customTemplates": [
    { "name": "page-solution", "title": "Solution Landing" },
    { "name": "page-about",    "title": "About Page" },
    { "name": "page-contact",  "title": "Contact Page" }
  ]
}
