{
  "$schema": "https://schemas.wp.org/wp/6.1/theme.json",
  "version": 2,
  "settings": {
    "typography": {
      "customFontSize": true,
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFamily": "'Space Grotesk', sans-serif",
          "name": "Space Grotesk",
          "slug": "space-grotesk"
        },
        {
          "fontFamily": "sans-serif",
          "name": "System Sans",
          "slug": "system-sans"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
      "lineHeight": 1.5
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
          "fontWeight": "600",
          "lineHeight": 1.2
        }
      },
      "paragraph": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
          "lineHeight": 1.5
        }
      }
    }
  }
}
