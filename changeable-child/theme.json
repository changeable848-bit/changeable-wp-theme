{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,

  "settings": {
    "layout": {
      "contentSize": "780px",
      "wideSize": "1200px"
    },

    "color": {
      "palette": [
        { "slug": "bg",     "name": "Background", "color": "#ffffff" },
        { "slug": "ink",    "name": "Ink",        "color": "#111111" },
        { "slug": "muted",  "name": "Muted",      "color": "#f7f7f7" },
        { "slug": "brand",  "name": "Brand",      "color": "#FFBFA8" },
        { "slug": "accent", "name": "Accent",     "color": "#1F4BFF" }
      ]
    },

    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "slug": "space-grotesk",
          "name": "Space Grotesk",
          "fontFamily": "\"Space Grotesk\", sans-serif",
          "fontFace": [
            {
              "fontFamily": "Space Grotesk",
              "fontStyle": "normal",
              "fontWeight": "300 700",
              "src": [ "file:./assets/fonts/space-grotesk/SpaceGrotesk-VariableFont_wght.ttf" ],
              "fontDisplay": "swap"
            }
          ]
        }
      ],
      "fontSizes": [
        { "slug": "xs",   "name": "XS",   "size": "0.875rem" },
        { "slug": "sm",   "name": "SM",   "size": "1rem" },
        { "slug": "base", "name": "Base", "size": "1.125rem" },
        { "slug": "lg",   "name": "LG",   "size": "clamp(1.125rem, 1.6vw, 1.25rem)" },
        { "slug": "xl",   "name": "XL",   "size": "clamp(1.5rem, 3vw, 2rem)" },
        { "slug": "2xl",  "name": "2XL",  "size": "clamp(2rem, 5vw, 3rem)" },
        { "slug": "3xl",  "name": "3XL",  "size": "clamp(2.5rem, 6vw, 3.5rem)" }
      ]
    },

    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "spacingScale": {
        "steps": 0.25,
        "mediumStep": 1,
        "max": 6
      }
    },

    "blocks": {
      "core/button": {
        "color": {
          "text": "var(--wp--preset--color--bg)",
          "background": "var(--wp--preset--color--ink)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
          "fontWeight": "500"
        },
        "spacing": {
          "padding": {
            "top": "14px",
            "bottom": "14px",
            "left": "24px",
            "right": "24px"
          }
        },
        "border": {
          "radius": "999px"
        }
      }
    }
  },

  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
      "lineHeight": "1.6",
      "fontWeight": "400"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "button": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
          "fontWeight": "500"
        }
      }
    }
  }
}
