{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "slug": "black", "color": "#000000", "name": "Black" },
        { "slug": "white", "color": "#ffffff", "name": "White" },
        { "slug": "primary", "color": "#1a73e8", "name": "Primary" },
        { "slug": "secondary", "color": "#fbbc05", "name": "Secondary" },
        { "slug": "tertiary", "color": "#34a853", "name": "Tertiary" },
        { "slug": "neutral", "color": "#f1f3f4", "name": "Neutral" }
      ]
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "slug": "space-grotesk",
          "name": "Space Grotesk",
          "fontFamily": "'Space Grotesk', sans-serif"
        }
      ],
      "fontSizes": [
        { "slug": "xs", "size": "0.875rem" },
        { "slug": "sm", "size": "1rem" },
        { "slug": "base", "size": "1.125rem" },
        { "slug": "lg", "size": "clamp(1.125rem, 1.6vw, 1.25rem)" },
        { "slug": "xl", "size": "clamp(1.5rem, 3.2vw, 2rem)" },
        { "slug": "2xl", "size": "clamp(2rem, 5vw, 3rem)" }
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
      "lineHeight": "1.55"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
          "lineHeight": "1.15"
        }
      },
      "button": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--space-grotesk)"
        }
      },
      "link": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--space-grotesk)"
        }
      }
    }
  }
}
